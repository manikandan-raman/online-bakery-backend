# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = spaces
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{js,ts}]
quote_type = single
max_line_length = 100

[*.md]
max_line_length = off
trim_trailing_whitespace = false
